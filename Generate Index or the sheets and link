function createPowerBIDashboard() {
  const ss = SpreadsheetApp.getActiveSpreadsheet();
  const dashboardSheetName = "Index";
  let dashboardSheet = ss.getSheetByName(dashboardSheetName);

  // Create or clear the dashboard sheet
  if (!dashboardSheet) {
    dashboardSheet = ss.insertSheet(dashboardSheetName);
  } else {
    dashboardSheet.clear();
  }

  // Define headers
  const headers = [
    "📄 Sheet Name",
    "🔗 Open Sheet",
    "📝 Description",
    "⚙️ Current status",
    "🎟️ IT Ticket",
    "📅 Expected date to close/Shut Gsheet respective task"
  ];

  // Set headers
  const headerRange = dashboardSheet.getRange(1, 1, 1, headers.length);
  headerRange.setValues([headers]);
  headerRange.setFontWeight("bold")
             .setFontSize(12)
             .setBackground("#4b6cb7")  // Blue tone
             .setFontColor("white");

  // Get all sheets except the dashboard
  const sheets = ss.getSheets().filter(s => s.getName() !== dashboardSheetName);

  // Build data
  let data = sheets.map(sheet => {
    const name = sheet.getName();
    const sheetNameWithIcon = `📄 ${name}`;
    const openLink = `=HYPERLINK("#gid=${sheet.getSheetId()}", "🔗 Open")`;
    return [sheetNameWithIcon, openLink, "", "", "", ""];
  });

  // Set the data rows
  if (data.length > 0) {
    dashboardSheet.getRange(2, 1, data.length, headers.length).setValues(data);
  }

  // Column widths
  dashboardSheet.setColumnWidth(1, 220);  // Sheet Name
  dashboardSheet.setColumnWidth(2, 90);   // Open Sheet
  dashboardSheet.setColumnWidth(3, 300);  // Description
  dashboardSheet.setColumnWidth(4, 140);  // Status
  dashboardSheet.setColumnWidth(5, 120);  // Ticket
  dashboardSheet.setColumnWidth(6, 240);  // Expected date

  // Apply alternating colors
  dashboardSheet.getRange(2, 1, data.length, headers.length)
    .applyRowBanding(SpreadsheetApp.BandingTheme.LIGHT_GREY);

  // Freeze header
  dashboardSheet.setFrozenRows(1);

  // Add table borders
  dashboardSheet.getRange(1, 1, data.length + 1, headers.length)
    .setBorder(true, true, true, true, null, null, "black", SpreadsheetApp.BorderStyle.SOLID_MEDIUM);
}
